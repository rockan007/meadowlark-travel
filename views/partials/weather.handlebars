<div class="weatherWidget">
    {{#each partials.weatherContext}}
        <div class="location">
            <h3>{{location.name}}</h3>
            <a href="{{location.forecastUrl}}">
                <img src="{{iconUrl}}"  alt="{{weather}}"/>
                {{weather}},{{temp}}
            </a>
        </div>
    {{/each}}
    <small>Source:
        <a href="https://exl.ptpress.cn:8442/ex/l/be4512da">
            National Weather Service
        </a>
    </small>
</div>